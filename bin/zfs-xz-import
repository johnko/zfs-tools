#!/bin/sh

FIRSTRECVOPT="recv -vudF"
INCREMENTRECV="recv -vud"

if [ -z "${2}" ]; then
    echo "Usage: $0  input_file  pool"
    exit 1
fi

OUTFILE="${1}"

RECVPOOL="${2}"

echo "xz -dk ${OUTFILE} - | zfs ${INCREMENTRECV} ${RECVPOOL}"
      xz -dk ${OUTFILE} - | zfs ${INCREMENTRECV} ${RECVPOOL} || exit $?
